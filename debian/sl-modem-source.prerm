#!/bin/sh
set -e

#DEBHELPER#

CVERSION=$(dpkg-query -W -f='${Version}' sl-modem-source | sed -e 's/\(.*\)-.*/\1/')

case "$1" in
  remove|upgrade)
    if [ -x /usr/sbin/dkms ]; then
      echo "Removing all DKMS Modules"
      dkms remove -m sl-modem -v $CVERSION --all > /dev/null
      echo "Done."
    fi
  ;;
esac


